<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/tvEventTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/event_name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCategoryBackground"
        app:layout_constraintEnd_toStartOf="@+id/ivPriority"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ivCategoryBackground"
        app:layout_constraintTop_toBottomOf="@+id/tvEventTime" />

    <ImageView
        android:id="@+id/ivCategoryBackground"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/category_something_shape" />

    <TextView
        android:id="@+id/tvEventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/date"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_priority_high_white_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvEventTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvEventTitle" />

    <ImageView
        android:id="@+id/ivCategorySecondEdition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_work_outline_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCategoryBackground"
        app:layout_constraintEnd_toEndOf="@+id/ivCategoryBackground"
        app:layout_constraintStart_toStartOf="@+id/ivCategoryBackground"
        app:layout_constraintTop_toTopOf="@+id/ivCategoryBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>